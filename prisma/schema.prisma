generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(uuid())
  name        String
  email       String @unique
  phone       String @unique
  preferences String
  password    String
  // preferences Preference[]

  @@index([email])
}

